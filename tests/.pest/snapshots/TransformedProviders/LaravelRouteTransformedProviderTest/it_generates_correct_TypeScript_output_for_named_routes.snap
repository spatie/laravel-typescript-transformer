    "projects.show": "{project}/errors",
    "occurrences.show": "errors/{error}/{errorOccurrence}",
    "users.show": "users/{id}"
}
type RouteParameters = {
invokable: never
'resource.index': never
'resource.create': never
'resource.store': never
'resource.show': {
resource: string | number
}
'resource.edit': {
resource: string | number
}
'resource.update': {
